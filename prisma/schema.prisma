generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed password
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  resumes    Resume[]
  interviews Interview[]
}

model Resume {
  id        String   @id @default(uuid())
  fileUrl   String
  fileName  String
  atsScore  Int?
  feedback  Json?    // AI analysis result
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Interview {
  id        String   @id @default(uuid())
  jobRole   String
  questions Json     // List of questions generated
  answers   Json?    // Audio URLs or text transcripts
  score     Int?
  feedback  Json?    // AI evaluation
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdminLog {
  id        String   @id @default(uuid())
  action    String
  details   Json?
  adminId   String
  createdAt DateTime @default(now())
}
